@model App.Volvo.Site.ViewModels.CaminhaoViewModel

@{
    ViewData["Title"] = "Remover";
}

<h3>Tem certeza que deseja remover este caminhão?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnoFabricacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnoFabricacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnoModelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnoModelo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chassi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chassi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para lista de caminhões</a>
    </form>
</div>
